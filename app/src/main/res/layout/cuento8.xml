<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Cuento8"
    android:background="@color/fondo_oracion_diaria">

    <TextView
        android:id="@+id/titulo_cuento15"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/cuento8_Los_Diez_Mandamientos"
        android:textAlignment="center"
        android:textSize="34sp"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.gms.ads.AdView
        android:id="@+id/adViewcuento8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="3dp"
        app:adSize="BANNER"
        app:adUnitId="ca-app-pub-1008936073037880/4268354127"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scrollView15"></com.google.android.gms.ads.AdView>

    <ScrollView
        android:id="@+id/scrollView15"
        android:layout_width="match_parent"
        android:layout_height="518dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="1dp"
        app:layout_constraintBottom_toTopOf="@+id/adView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_diez_mandamientos"
        tools:ignore="UnknownIdInLayout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/texto_15"
                android:layout_width="match_parent"
                android:layout_height="1800dp"
                android:text="@string/texto_cuento8"
                android:textAlignment="center"
                android:textSize="24sp"
                android:textStyle="bold" />
        </LinearLayout>
    </ScrollView>

    <ImageView
        android:id="@+id/img_diez_mandamientos"
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:layout_marginStart="160dp"
        android:layout_marginEnd="120dp"
        android:layout_marginBottom="4dp"
        app:layout_constraintBottom_toTopOf="@+id/scrollView15"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titulo_cuento15"
        tools:srcCompat="@tools:sample/avatars" />

    <ImageButton
        android:id="@+id/bt_me_gusta"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="6dp"
        android:layout_marginTop="92dp"
        android:layout_marginEnd="66dp"
        android:layout_marginBottom="16dp"

        android:background="@drawable/me_gusta"

        app:layout_constraintBottom_toTopOf="@+id/scrollView15"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/img_diez_mandamientos"
        app:layout_constraintTop_toBottomOf="@+id/titulo_cuento15"
        tools:ignore="SpeakableTextPresentCheck"
        tools:srcCompat="@drawable/me_gusta" />

    <ImageButton
        android:id="@+id/bt_no_me_gusta"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="103dp"
        android:layout_marginEnd="57dp"

        android:layout_marginBottom="5dp"
        android:background="@drawable/no_me_gusta"
        app:layout_constraintBottom_toTopOf="@+id/scrollView15"
        app:layout_constraintEnd_toStartOf="@+id/img_diez_mandamientos"
        app:layout_constraintStart_toEndOf="@+id/tv_no_mg"
        app:layout_constraintTop_toBottomOf="@+id/titulo_cuento15"
        tools:ignore="SpeakableTextPresentCheck"
        tools:srcCompat="@drawable/no_me_gusta" />

    <TextView
        android:id="@+id/cantidad_me_gusta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="22dp"
        android:layout_marginTop="107dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="30dp"
        android:textColor="@color/md_indigo_700"
        android:textStyle="bold"

        app:layout_constraintBottom_toTopOf="@+id/scrollView15"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/bt_me_gusta"
        app:layout_constraintTop_toBottomOf="@+id/titulo_cuento15"
        tools:text="555" />

    <TextView
        android:id="@+id/tv_no_mg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="35dp"
        android:layout_marginTop="132dp"
        android:layout_marginBottom="5dp"
        android:textColor="?attr/colorError"

        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/scrollView15"
        app:layout_constraintEnd_toStartOf="@+id/bt_no_me_gusta"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titulo_cuento15"
        tools:text="5" />

</androidx.constraintlayout.widget.ConstraintLayout>