<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Cuento2"
    android:background="@color/fondo_oracion_diaria">

    <TextView
        android:id="@+id/titulo_cuento15"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/cuento2_EL_REY_SALOMÃ“N_Reyes_3"
        android:textAlignment="center"
        android:textSize="34sp"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.gms.ads.AdView
        android:id="@+id/adViewcuento2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        app:adSize="BANNER"
        app:adUnitId="cca-app-pub-1008936073037880/7285948445"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scrollView9"></com.google.android.gms.ads.AdView>

    <ScrollView
        android:id="@+id/scrollView9"
        android:layout_width="match_parent"
        android:layout_height="522dp"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="3dp"
        app:layout_constraintBottom_toTopOf="@+id/adViewcuento2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_rey_salomon"
        tools:ignore="UnknownIdInLayout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/texto_15"
                android:layout_width="match_parent"
                android:layout_height="1400dp"
                android:text="@string/texto_cuento2"
                android:textAlignment="center"
                android:textSize="24sp"
                android:textStyle="bold" />
        </LinearLayout>
    </ScrollView>

    <ImageView
        android:id="@+id/img_rey_salomon"
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:layout_marginStart="161dp"
        android:layout_marginEnd="119dp"
        android:layout_marginBottom="1dp"
        app:layout_constraintBottom_toTopOf="@+id/scrollView9"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titulo_cuento15"
        tools:srcCompat="@tools:sample/avatars" />

    <ImageButton
        android:id="@+id/bt_me_gusta"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="92dp"
        android:layout_marginEnd="66dp"
        android:layout_marginBottom="10dp"

        android:background="@drawable/me_gusta"

        app:layout_constraintBottom_toTopOf="@+id/scrollView9"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/img_rey_salomon"
        app:layout_constraintTop_toBottomOf="@+id/titulo_cuento15"
        tools:ignore="SpeakableTextPresentCheck"
        tools:srcCompat="@drawable/me_gusta" />

    <ImageButton
        android:id="@+id/bt_no_me_gusta"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="103dp"
        android:layout_marginEnd="58dp"

        android:layout_marginBottom="1dp"
        android:background="@drawable/no_me_gusta"
        app:layout_constraintBottom_toTopOf="@+id/scrollView9"
        app:layout_constraintEnd_toStartOf="@+id/img_rey_salomon"
        app:layout_constraintStart_toEndOf="@+id/tv_no_mg"
        app:layout_constraintTop_toBottomOf="@+id/titulo_cuento15"
        tools:ignore="SpeakableTextPresentCheck"
        tools:srcCompat="@drawable/no_me_gusta" />

    <TextView
        android:id="@+id/cantidad_me_gusta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="22dp"
        android:layout_marginTop="107dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="25dp"
        android:textColor="@color/md_indigo_700"
        android:textStyle="bold"

        app:layout_constraintBottom_toTopOf="@+id/scrollView9"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/bt_me_gusta"
        app:layout_constraintTop_toBottomOf="@+id/titulo_cuento15"
        tools:text="555" />

    <TextView
        android:id="@+id/tv_no_mg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="35dp"
        android:layout_marginTop="132dp"
        android:layout_marginBottom="1dp"
        android:textColor="?attr/colorError"

        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/scrollView9"
        app:layout_constraintEnd_toStartOf="@+id/bt_no_me_gusta"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titulo_cuento15"
        tools:text="5" />

</androidx.constraintlayout.widget.ConstraintLayout>